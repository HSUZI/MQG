<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/head"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    >
    <com.qingqu.wc.maqi.view.mw_UserButton
        android:id="@+id/ub_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <com.qingqu.wc.maqi.view.mw_UserButton
        android:id="@+id/ub_f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <com.qingqu.wc.maqi.view.mw_UserButton
        android:id="@+id/ub_f2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <com.qingqu.wc.maqi.view.mw_UserButton
        android:id="@+id/ub_f3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <com.qingqu.wc.maqi.view.mw_UserButton
        android:id="@+id/ub_f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    <ImageView
        android:id="@+id/mw_user_button_item01_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/lx_6" />

    <TextView
        android:id="@+id/mw_user_button_item01_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/mw_user_button_item01_img"
        android:gravity="center|left"
        android:padding="10dp"
        android:text="標題"
        android:textColor="#7B7B7D"
        android:textSize="17sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mw_user_button_item01_text"
            android:layout_centerInParent="true"

            android:orientation="vertical"
            >
    <EditText
        android:id="@+id/et_bt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        />
        <View
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"
            android:background="#22A595"

            />
        </LinearLayout>
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="28dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_focused"
        android:hint="說說你的體驗心得，分享給大家吧"
        android:textSize="13sp"
        android:minLines="9"
        android:gravity="left|top"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:inputType="textMultiLine"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="28dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button"
        android:textColor="#fff"
        android:textSize="15sp"

        android:text="送出"/>
</LinearLayout>

</LinearLayout>